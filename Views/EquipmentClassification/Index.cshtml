@model IEnumerable<EquipmentTracking.Models.EquipmentClassification>

@{
    ViewBag.Title = "Equipment classifications list";
}

<h2>Equipment Classifications</h2>

<p>
    @Html.ActionLink("Add a new classification", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Operations
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", "EquipmentClassification", new { id = item.ID, })" class="">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            |
            <a href="@Url.Action("Details", "EquipmentClassification", new { id = item.ID, })" class="">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </a>
            |
            <a href="@Url.Action("Delete", "EquipmentClassification", new { id = item.ID, })" class="">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>

        </td>
    </tr>
}

</table>
