@model IEnumerable<EquipmentTracking.Models.Equipment>

@{
    ViewBag.Title = "Equipment list";
}

<h2>Available equipment</h2>

<p>
    @Html.ActionLink("Add a new equipment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentClassification.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            Operations
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <strong>
                (@Html.DisplayFor(modelItem => item.EquipmentClassification.ID))
            </strong>
            @Html.DisplayFor(modelItem => item.EquipmentClassification.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>

            <a href="@Url.Action("Edit", "Equipment", new { id = item.EquipmentID, })" class="">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            |
            <a href="@Url.Action("Details", "Equipment", new { id = item.EquipmentID, })" class="">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </a>
            |
            <a href="@Url.Action("Delete", "Equipment", new { id = item.EquipmentID, })" class="">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>

        </td>
    </tr>
}

</table>
